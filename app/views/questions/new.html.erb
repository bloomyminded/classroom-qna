<article>

  <div>
    <span class="button-center">
      <%= button_to 'Back', questions_path, method: :get %>
    </span>
  </div>

  <br>

  <div class="cards">
    <div class="card">
      <div class="card-header">
        New Question
      </div>
      <div class="card-copy">
        <%= form_for @question do |f| %>
          <p><%= f.text_area :body %></p>
          <p><%= f.submit "Submit Question"%></p>
        <% end %>
      </div>
    </div>
  </div>

</article>
