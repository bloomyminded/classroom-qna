<article>

  <div>
  <span class="button-center">
      <%= button_to 'Back', questions_path, method: :get %>
    <span>
  </div>

  <br>

  <div class="cards">
      <div class="card">
      <div class="card-header">
        <%= link_to @question.body, @question  %>
        <span class="badge"><%= @question.get_votes %></span>
      </div>
      <div class="card-copy">
        <%= (render partial: "refills/comment", collection: @question.comments) || "No comments yet" %>
        <span class="time">asked by User <%= time_ago_in_words(@question.created_at) %> ago</span>
      </div>
      <div class="card-comment-hide">
        <%= form_for [@question, @question.comments.build] do |f| %>
          <p><%= f.text_area :body %></p>
          <p><%= f.submit "Add Comment" %></p>
      <% end %>
      </div>
    </div>
  </div>

</article>
