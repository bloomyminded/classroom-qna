<p id="notice"><%= notice %></p>

<div class="centered-butt">
  <span><%= button_to 'New Question', new_question_path %></span>
</div>

<br>

<div class="cards">
  <% @questions.each do |question| %>
    <div class="card">
      <div class="card-header">
        <%= link_to question.title , question  %>
        <span class=<%= question.upvote_rank? %> ><%= question.upvote %></span>
      </div>
      <div class="card-copy">
        <%= (render partial: "refills/comment", collection: question.comments.limit(3)) || "No comments yet" %>
      </div>
      <div class="card-comment-hide">
        <%= form_for [question, question.comments.build] do |f| %>
          <p><%= f.text_area :body %></p>
          <p><%= f.submit "Add Comment" %></p>
        <% end %>
        <span><%= button_to 'Good Question!', upvote_question %></span>
      </div>
    </div>
  <% end %>
</div>
