<p id="notice"><%= notice %></p>

<section>
  <div class="cards">
    <% @questions.each do |question| %>
      <div class="card">
        <div class="card-header">
          <%= question.title %>
        </div>
        <div class="card-copy">
          <% question.comments.each do |comment| %>
            <div class="comment">
              <div class="comment-content">
                <p><%= comment.body %></p>
              </div>
            </div>
          <% end %>
        </div>
        <div class="card-info">
          <span class=<%= question.upvote_rank? %> ><%= question.upvote %></span>
        </div>
        <div class="card-comment">
          <%= form_for [question, @comment] do |f| %>
            <p><%= f.text_area :body %></p>
            <p><%= f.submit "Add Comment" %></p>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</section>

<br>

<div align='center'><%= button_to 'New Question', new_question_path %></div>
