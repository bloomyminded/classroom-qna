<article>

  <br>

  <div class="cards">
    <div class="card">
      <div class="card-header">
        <%= @course %> 
      </div>
      <div class="card-copy">

        <% if @instructor %>
          <h2>Instructor</h2>
          <p><%= @instructor %></p>
          <p>
            <%= mail_to @instructor.email, "Email" %> | 
            <%= link_to "Message", '#' %>
          </p>
          
          <br>
        <% end %>

        <h2>Description</h2>
        <p><%= @course.description %></p>

        <br>

        <h2>Course Links</h2> 
        <p><%= link_to "Lectures", course_lectures_path(@course) %></p>

      </div>
    </div>
  </div>

</article>
