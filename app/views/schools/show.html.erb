<article>

  <br>

  <div class="cards">
    <div class="card">
      <div class="card-header">
        <%= @school.name %>
        <% if @user.has_role? :admin %>
          <span><%= link_to "X", school_path(@school), method: :delete %></span>
        <% end %>
      </div>
      <div class="card-copy">
        <p><%= @school.city %>, <%= @school.state %> <%= @school.zip %></p>

        <h2>Courses</h2>
        <ul>
          <% @courses.each do |c| %>
            <li> <%= link_to c.name, course_path(c) %>
                 <% if c.user_id %>
                   | <%= User.find(c.user_id) %>
                 <% end %>
            </li>
          <% end %>
        </ul>

      </div>
    </div>
  </div>

</article>
