<header class="navigation" role="banner">
  <div class="navigation-wrapper">
    <a href="javascript:void(0)" class="logo">
      <img src="https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/placeholder_logo_1.png" alt="Logo Image">
    </a>
    <a href="javascript:void(0)" class="navigation-menu-button" id="js-mobile-menu">MENU</a>
    <nav role="navigation">
      <ul id="js-navigation-menu" class="navigation-menu show">
        <% if user_signed_in? %>
            <% if current_user.school %>
              <li class="nav-link"><%= link_to 'School', school_path(current_user.school) %></li>
              <li class="nav-link"><%= link_to 'Courses', courses_path %></li>
            <% end %>
          <% if current_user.is_admin? %>
            <li class="nav-link more"><a href="javascript:void(0)">Admin</a>
              <ul class="submenu">
                <li><%= link_to 'Schools', schools_path %></li>
                <li><%= link_to 'Courses', courses_path %></li>
                <!--<li class="more"><a href="javascript:void(0)">Item with submenu</a>
                  <ul class="submenu">
                    <li><a href="javascript:void(0)">Sub-submenu Item</a></li>
                    <li><a href="javascript:void(0)">Another Item</a></li>
                  </ul>
                </li>-->
              </ul>
            </li>
          <% end %>
        <% end %>
      </ul>
    </nav>
    <div class="navigation-tools">
      <% if user_signed_in? %>
        <%= link_to 'Edit profile', edit_user_registration_path, class: "sign-up" %>
        <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "sign-up" %>
      <% else %>
        <%= link_to "Sign Up", new_user_registration_path, class: "sign-up" %>
        <%= link_to "Login", new_user_session_path, class: "sign-up" %>
      <% end %>
    </div>
  </div>
</header>
