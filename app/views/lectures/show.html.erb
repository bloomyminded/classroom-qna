<article>

  <br>

  <div class="cards">
    <% @questions.each do |question| %>
      <div class="card">
        <div class="card-header">
          <%= link_to "Question", question %>
          <span class="badge"><%= question.get_votes %></span>
        </div>
        <div class="card-header">
          <%= question.body %>
        </div>
        <div class="card-copy">
          <span class="time">
            asked by <strong><%= question.user %></strong> <%= time_ago_in_words(question.created_at) %> ago
          </span>
        </div>
      </div>
    <% end %>
  </div>

  <br>

</article>
